            "body": {
              "mode": "raw",
              "raw": "{\n  \"sectionId\": {{sectionId}},\n  \"subjectId\": {{subjectId}},\n  \"numberOfBatches\": 3,\n  \"maxStudentsPerBatch\": 30\n}"
